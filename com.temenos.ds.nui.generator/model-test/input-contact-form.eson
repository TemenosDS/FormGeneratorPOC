import nui2.*

Form form1 {
	titleLabel: "Contact (generated by contact-form.eson)"
	fields: [
		Field {
			label: "Name"
			model: "model.contact.name"
			ftype: :text
			required: true
		}
		Field {
			label: "Email"
			model: "model.contact.email"
			ftype: :email
			required: true
			prefix: FormFieldPrefixGlyphIcon {
				glyphicon: :envelope
			}
		}
		Field {
			label: "Fone"
			model: "model.contact.phone"
			ftype: :text
		}
		Field {
			label: "Age"
			model: "model.contact.age"
			ftype: :number
			required: true
		}
		Field {
			label: "Parent's Email"
			model: "model.contact.parentEmail"
			ftype: :email
			required: false
			prefix: FormFieldPrefixGlyphIcon {
				glyphicon: :envelope
			}
		}
	]
}